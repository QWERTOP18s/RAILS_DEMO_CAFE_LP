<% provide(:title, "detail") %>
<%= @product.name %>
<%= @product.price %>
<%= @product.description %>
<% if @product.ref.attached? %>
  <%= image_tag @product.ref.variant(resize_to_limit: [200, 200]), alt: @product.name, class: "detail-image" %>
<% else %>
  <%= image_tag 'noref.jpg', alt: @product.name, class: "detail-image" %>
<% end %>
<%= link_to "edit", edit_product_path(@product) %>
<%= link_to "delete", @product, data: { "turbo-method": :delete,
                                          turbo_confirm: I18n.t("views.messages.delete_confirm") } %>
